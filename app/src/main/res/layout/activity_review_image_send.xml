<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ReviewImageSendActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/backcontact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000ffff"
                    android:src="@drawable/arrowback"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Image"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <com.jsibbold.zoomage.ZoomageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="imagge"
            android:background="@drawable/icon_24"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></com.google.android.material.floatingactionbutton.FloatingActionButton>

    </LinearLayout>
</layout>